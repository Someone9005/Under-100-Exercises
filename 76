from datetime import datetime

class today_is:

    def weekday():
        if datetime.weekday(datetime.today()) == 0:
            return "Monday"
        elif datetime.weekday(datetime.today()) == 1:
            return "Tuesday"
        elif datetime.weekday(datetime.today()) == 2:
            return "Wednesday"
        elif datetime.weekday(datetime.today()) == 3:
            return "Thursday"
        elif datetime.weekday(datetime.today()) == 4:
            return "Friday"
        elif datetime.weekday(datetime.today()) == 5:
            return "Saturday"
        elif datetime.weekday(datetime.today()) == 6:
            return "Sunday"
        else:
            raise Exception("Something went wrong")

    def month():
        if datetime.now().month == 1:
            return "January"
        elif datetime.now().month == 2:
            return "February"
        elif datetime.now().month == 3:
            return "March"
        elif datetime.now().month == 4:
            return "April"
        elif datetime.now().month == 5:
            return "May"
        elif datetime.now().month == 6:
            return "June"
        elif datetime.now().month == 7:
            return "July"
        elif datetime.now().month == 8:
            return "August"
        elif datetime.now().month == 9:
            return "September"
        elif datetime.now().month == 10:
            return "October"
        elif datetime.now().month == 11:
            return "November"
        elif datetime.now().month == 12:
            return "December"

    def the_date():
        print("Today is", today_is.weekday(), ",", today_is.month(), datetime.now().day, ",", datetime.now().year)
        
today_is.the_date()
